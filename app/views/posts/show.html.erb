<%= form_for @comment do |f| %>
<%= f.label :comment_body %>
<%= f.text_field :comment_body %>

<%= f.label :username %>
<%= f.collection_select :user_id, User.all, :id, :username %>

<% f.id = @post.id %>
<% end %>

